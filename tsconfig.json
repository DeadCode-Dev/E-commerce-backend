{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express", "cors", "cookie-parser", "dotenv"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/api/*": ["api/*"],
      "@/config/*": ["config/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/shared/*": ["shared/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/tests/*": ["tests/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "types.d.ts", "src/**/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
